{
  "name": "mithril-vault",
  "private": true,
  "version": "0.1.1",
  "license": "GPL-3.0-or-later",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev-desktop": "bun run tauri dev",
    "dev-android": "bun run tauri android dev",
    "dev-ios": "bun run tauri ios dev",
    "build": "tsc && vite build",
    "typecheck": "tsc --noEmit",
    "preview": "vite preview",
    "tauri": "tauri",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css,json}\"",
    "check": "concurrently -g \"bun run lint\" \"bun run format:check\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "licenses:js": "license-checker-rseidelsohn --summary --production --excludePrivatePackages --onlyAllow \"MIT;Apache-2.0;BSD-2-Clause;BSD-3-Clause;ISC;Zlib;0BSD;CC0-1.0;MPL-2.0;LGPL-2.1-only;LGPL-2.1-or-later;LGPL-3.0-only;LGPL-3.0-or-later;GPL-3.0-only;GPL-3.0-or-later;MIT OR Apache-2.0;Apache-2.0 OR MIT\"",
    "licenses:js:all": "license-checker-rseidelsohn --summary --excludePrivatePackages --onlyAllow \"MIT;MIT-0;Apache-2.0;BSD-2-Clause;BSD-3-Clause;ISC;Zlib;0BSD;CC0-1.0;CC-BY-3.0;CC-BY-4.0;BlueOak-1.0.0;MPL-2.0;LGPL-2.1-only;LGPL-2.1-or-later;LGPL-3.0-only;LGPL-3.0-or-later;GPL-3.0-only;GPL-3.0-or-later;MIT OR Apache-2.0;(MIT OR Apache-2.0);Apache-2.0 OR MIT;Python-2.0;(MIT AND CC-BY-3.0)\"",
    "licenses:rust": "cd src-tauri && cargo deny check --config ../deny.toml licenses bans sources",
    "advisories:rust": "cd src-tauri && cargo deny check --config ../deny.toml advisories",
    "licenses:check": "concurrently -g \"bun run licenses:js\" \"bun run licenses:rust\"",
    "licenses:generate": "license-checker-rseidelsohn --production --excludePrivatePackages --markdown --out THIRD_PARTY_LICENSES.md",
    "prepare": "husky",
    "changelog": "git-cliff -V >/dev/null 2>&1 || (echo 'git-cliff required: https://github.com/orhun/git-cliff#installation' && exit 1); git-cliff -o CHANGELOG.md",
    "changelog:preview": "git-cliff -V >/dev/null 2>&1 || (echo 'git-cliff required: https://github.com/orhun/git-cliff#installation' && exit 1); git-cliff --unreleased"
  },
  "dependencies": {
    "@tauri-apps/api": "^2",
    "@tauri-apps/plugin-opener": "^2",
    "dayjs": "^1.11.19",
    "lodash-es": "^4.17.22",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zod": "^4.3.5"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix"
    ],
    "src/**/*.{css,json}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.0",
    "@commitlint/config-conventional": "^20.3.0",
    "@eslint/js": "^9.39.2",
    "@tauri-apps/cli": "^2",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@types/lodash-es": "^4.17.12",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^4.0.16",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "globals": "^17.0.0",
    "husky": "^9.1.7",
    "jsdom": "^27.4.0",
    "license-checker-rseidelsohn": "^4.4.2",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.52.0",
    "vite": "^6.0.3",
    "vitest": "^4.0.16"
  }
}
